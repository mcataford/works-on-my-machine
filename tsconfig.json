{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs", 
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true, 
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": [
        "dist/**/*",
        "tests/**/*"
    ]
}
